<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
        <Nullable>enable</Nullable>
        <Version>1.0.4</Version>
        <AssemblyName>Deimdal.JsonSchemaConvert</AssemblyName>
        <RootNamespace>Deimdal.JsonSchemaConvert</RootNamespace>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>

        <PackAsTool>true</PackAsTool>
        <ToolCommandName>convert-json-schema</ToolCommandName>
        <PackageOutputPath>./nupkg</PackageOutputPath>
        <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
        <Description>Json schema version convertion utility</Description>
        <RepositoryUrl>https://github.com/deimdal/json-schema-convert</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <Authors>Deimdal</Authors>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <LangVersion>12</LangVersion>

    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Newtonsoft.Json.Schema" Version="4.0.1"/>
        <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1"/>
        <None Include="..\README.md" Pack="true" PackagePath="\"/>
    </ItemGroup>

</Project>
